{% import 'macros/navbar.twig' as navbar %}
{% import 'macros/head.twig' as head %}
<!doctype html>
<html lang="en">
<head>
    {{ head.get_meta() }}
    <link rel="icon" href="{{ base_url() }}/assets/favicon.ico">
    <title>{% block title %}{{ title }}{% endblock %}</title>
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/uikit.css" />
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/fontawesome.min.css" />
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/style.css" />
    <script src="{{ base_url() }}/assets/js/jquery-3.3.1.min.js"></script>
    <script src="{{ base_url() }}/assets/js/uikit.js"></script>
    {% block style %}{% endblock %}
    {{ head.get_scheme() }}
</head>
<body>
    <div class="uk-container-expand">
        <div uk-sticky="sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky">
            {{ navbar.mainbar(menu) }}
        </div>
    </div>
    <div class="uk-container">
        <main role="main" class="container">
            <div class="uk-margin uk-flex uk-flex-right">
                {% block subnav %}{% endblock %}
            </div>
            {% for message in flash_messages.success %}
                <div class="uk-alert-success" uk-alert>
                    <a class="uk-alert-close" uk-close></a>
                    <h5>{{ message }}</h5>
                </div>
            {% endfor %}

            {% for message in flash_messages.error %}
                <div class="uk-alert-danger" uk-alert>
                    <a class="uk-alert-close" uk-close></a>
                    <h5>{{ message }}</h5>
                </div>
            {% endfor %}

            {% block content %}{% endblock %}
        </main>
    </div>
    {% block modals %}{% endblock %}
    <script src="{{ base_url() }}/assets/scripts/scripts.js"></script>
    {% block javascript %}{% endblock %}
</body>
</html>

