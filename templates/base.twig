<body class="bg-light">

<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand mr-auto mr-lg-5" href="#"><img src="/assets/images/gxlogo-xs.png"></a>
        <button class="navbar-toggler p-0 border-0" type="button" data-toggle="offcanvas">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path_for('index') }}">Main <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
            <ul class="navbar-nav mr-0">
                <li class="nav-item dropdown mx-3">
                    <a class="nav-link" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-ellipsis-v"></i></a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown01">

                        {% if not is_user() %}
                            <a class="dropdown-item" href="{{ path_for('login') }}">{{ trans('Auth', 'login_reg_link') }}</a>
                        {% else %}
                            <h6 class="dropdown-header">{{ get_user_name() }}</h6>
                            {% if has_access('admin.*') %}
                                <a class="dropdown-item" href="{{ path_for('admin_index') }}">Admin</a>
                            {% endif %}
                            <a class="dropdown-item" href="#">Settings</a>
                            <a class="dropdown-item" href="{{ path_for('logout') }}">{{ trans('Auth', 'logout_link') }}</a>
                        {% endif %}
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>

{% block nav_scroller %}
<div class="nav-scroller bg-white box-shadow">
    <nav class="nav nav-underline">
            <a class="nav-link active" href="{{ path_for('index') }}">Main</a>
            <a class="nav-link" href="#">
                Friends
                <span class="badge badge-pill bg-light align-text-bottom">27</span>
            </a>
            <a class="nav-link" href="#">Explore</a>
            <a class="nav-link" href="#">Suggestions</a>
    </nav>
</div>
{% endblock %}

<main role="main" class="container">
    <div class="my-3 p-3 bg-white rounded box-shadow">
    {% for error in flash_messages.error %}
        <div class="alert alert-danger" role="alert">{{ error }}</div>
    {% endfor %}



    {% block content %}{% endblock %}
    </div>
</main>

