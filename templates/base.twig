<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="/favicon.ico">
    <title>Title</title>
    <link href="{{ base_url() }}/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ base_url() }}/assets/css/offcanvas.css" rel="stylesheet">
    {#<script defer src="https://use.fontawesome.com/releases/v5.0.13/js/all.js" integrity="sha384-xymdQtn1n3lH2wcu0qhcdaOpQwyoarkgLVxC/wZ5q7h9gHtxICrpcaSUfygqZGOe" crossorigin="anonymous"></script>#}
    <link href="{{ base_url() }}/assets/css/open-iconic-bootstrap.css" rel="stylesheet">
    {#<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/hover.css/2.3.1/css/hover-min.css">#}
    {% block style %}{% endblock %}
</head>

<body class="bg-light">

<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand mr-auto mr-lg-5" href="{{ path_for('index') }}"><img src="{{ base_url() }}/assets/images/gxlogo-xs.png"></a>
        <button class="navbar-toggler p-0 border-0" type="button" data-toggle="offcanvas">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
				{% for item in menu %}
				    {% if has_access(item.permission) %}
						{% if menu.getActiveRoute() == item.route %}
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path_for(item.route, item.params) }}">{{ item.title }} <span class="sr-only">(current)</span></a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path_for(item.route, item.params) }}">{{ item.title }}</a>
                            </li>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
            <ul class="navbar-nav mr-0">
                <li class="nav-item dropdown mx-3">
                    <a class="nav-link" href="#" id="dropdownLangMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{ userLangName }}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownLangMenu">
                        {% for key,value in siteLanguages %}
                            <a class="dropdown-item" href="{{ path_for('language', {}, {'lang': key, 'r': currentUri}) }}">{{ value }}</a>
                        {% endfor %}
                    </div>
                </li>
                <li class="nav-item dropdown mx-3">
                    <a class="nav-link" href="#" id="dropdownMainMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="oi oi-ellipses"></span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMainMenu">

                        {% if not is_user() %}
                            <a class="dropdown-item" href="{{ path_for('login') }}">
                                {{ trans('buttons', 'login') }}/{{ trans('buttons', 'register') }}
                            </a>
                        {% else %}
                            <h6 class="dropdown-header">{{ get_user_name() }}</h6>
                            {% if has_access('admin.*') %}
                                <a class="dropdown-item" href="{{ path_for('admin_index') }}">Admin</a>
                            {% endif %}
                            <a class="dropdown-item" href="#">Settings</a>
                            <a class="dropdown-item" href="{{ path_for('logout') }}">{{ trans('buttons', 'logout') }}</a>
                        {% endif %}
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>

<main role="main" class="container">
    <div class="my-3 p-3 bg-white rounded box-shadow">
    {% for message in flash_messages.success %}
        <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endfor %}

    {% for message in flash_messages.error %}
        <div class="alert alert-danger" role="alert">{{ message }}</div>
    {% endfor %}

    {% block content %}{% endblock %}
    </div>
</main>

{% block modals %}{% endblock %}

<script src="{{ base_url() }}/assets/js/jquery-3.3.1.min.js" crossorigin="anonymous"></script>
<script src="{{ base_url() }}/assets/js/popper.min.js"></script>
<script src="{{ base_url() }}/assets/js/bootstrap.min.js"></script>
<script src="/assets/js/holder.min.js"></script>
<script src="{{ base_url() }}/assets/js/offcanvas.js"></script>
{% block javascript %}{% endblock %}
</body>
</html>

